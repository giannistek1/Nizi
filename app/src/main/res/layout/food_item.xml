<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    app:cardCornerRadius="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="2dp">

        <ImageView
            android:id="@+id/food_image"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:padding="2dp"
            tools:src="@drawable/ic_food"
            android:contentDescription="food image" />

        <LinearLayout
            android:id="@+id/food_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:layout_marginRight="90dp"
            android:layout_toEndOf="@+id/food_image"
            android:layout_toStartOf="@+id/btn_add"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:maxLines="1"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:text="Title" />

            <TextView
                android:id="@+id/summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title"
                android:maxLines="1"
                android:textSize="16sp"
                tools:text="Summary" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/food_item_btns"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="right" >

            <ImageButton
                android:id="@+id/fav_btn"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_row="4"
                android:layout_column="0"
                android:layout_toStartOf="@id/add_btn"
                android:src="@drawable/ic_favorite"
                android:contentDescription="favorite button" />

            <ImageButton
                android:id="@+id/add_btn"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_row="4"
                android:layout_column="0"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_add_s"
                android:contentDescription="add button" />

            <ImageButton
                android:id="@+id/delete_btn"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_row="4"
                android:layout_column="0"
                android:layout_toStartOf="@id/fav_btn"
                android:src="@drawable/ic_delete"
                android:contentDescription="delete button" />

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>