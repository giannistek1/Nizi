            android:textSize="@dimen/textSizeNormal"
            tools:text="Title" />

        <TextView
            android:id="@+id/portion_size"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:maxLines="1"
            android:textColor="@android:color/black"
            android:textSize="@dimen/textSizeNormal"
            tools:text="0 gr" />

