<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/item_patient_id"
        android:textSize="@dimen/h3"
        android:fontFamily="@font/segoe_ui_semibold"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/marginSmall"
        android:layout_alignParentStart="true"
        android:paddingStart="@dimen/marginNormal"
        android:paddingTop="@dimen/marginSmall"
        android:textColor="@color/colorPrimary"/>

    <TextView
        android:id="@+id/item_patient_name"
        android:textSize="@dimen/h3"
        android:fontFamily="@font/segoe_ui_semibold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/item_patient_id"
        android:paddingStart="@dimen/marginNormal"
        android:paddingTop="@dimen/marginSmall"
        android:textColor="@color/colorPrimary"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/item_patient_name"
        android:layout_marginStart="@dimen/marginNormal"
        android:layout_marginEnd="@dimen/marginNormal"
        android:background="@color/darkGray"/>
</RelativeLayout>