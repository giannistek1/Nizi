<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Custom -->
        <item name="android:fontFamily">@font/helvetica_neue_light</item>
        <item name="android:textSize">@dimen/textSizeNormal</item>

        <!-- For buttons -->
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ToolbarTitleTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textSize">@dimen/h1</item>
        <item name="android:fontFamily">@font/segoe_ui_bold</item>
    </style>

    <style name="ToolbarBackButtonTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <!-- Customize color of back arrow -->
        <item name="colorControlNormal">@color/white</item>
    </style>

    <!-- Bottom nav bar -->
    <style name="BottomNavigationTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--<item name="android:textColorSecondary">@color/colorAccent</item>-->
    </style>
</resources>
